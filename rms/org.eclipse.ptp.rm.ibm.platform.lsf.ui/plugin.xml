<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ptp.rm.jaxb.control.ui.widget">
      <widget
            id="applicationQuery"
            updateModelClass="org.eclipse.ptp.rm.ibm.lsf.ui.model.LSFQueryModel"
            widgetClass="org.eclipse.ptp.rm.ibm.lsf.ui.widgets.ApplicationQueryControl">
      </widget>
      <widget
            id="queueQuery"
            updateModelClass="org.eclipse.ptp.rm.ibm.lsf.ui.model.LSFQueryModel"
            widgetClass="org.eclipse.ptp.rm.ibm.lsf.ui.widgets.QueueQueryControl">
      </widget>
      <widget
            id="reservationQuery"
            updateModelClass="org.eclipse.ptp.rm.ibm.lsf.ui.model.LSFQueryModel"
            widgetClass="org.eclipse.ptp.rm.ibm.lsf.ui.widgets.ReservationQueryControl">
      </widget>
   </extension>
   <extension
         point="org.eclipse.ptp.rm.jaxb.core.JAXBResourceManagerConfigurations">
      <JAXBResourceManagerConfiguration
            configurationFile="data/com.ibm.platform.lsf.xml"
            name="IBM Platform LSF">
      </JAXBResourceManagerConfiguration>
      <JAXBResourceManagerConfiguration
            configurationFile="data/com.ibm.platform.lsf_interactive.xml"
            name="IBM Platform LSF Interactive">
      </JAXBResourceManagerConfiguration>
   </extension>
</plugin>
